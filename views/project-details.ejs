<!-- Project Header -->
<div class="project-header">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="bi bi-house"></i> Home</a></li>
                <li class="breadcrumb-item"><a href="/search">Projects</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= project.title %></li>
            </ol>
        </nav>
        
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-folder-open"></i> <%= project.title %>
                </h1>
                
                <div class="mb-3">
                    <% if (project.phase) { %>
                        <span class="phase-badge phase-<%= project.phase %>" style="font-size: 0.9rem; padding: 0.6rem 1.2rem;">
                            <i class="bi bi-gear-fill me-1"></i>
                            <%= project.phase.charAt(0).toUpperCase() + project.phase.slice(1) %>
                        </span>
                    <% } %>
                </div>
                
                <p class="lead mb-0">
                    Project by <strong><%= project.username %></strong>
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-diagram-3-fill display-1"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <!-- Project Details -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Project Description
                    </h4>
                </div>
                <div class="card-body">
                    <div class="project-description">
                        <%= project.short_description || 'No description provided for this project.' %>
                    </div>
                </div>
            </div>

            <!-- Owner Actions -->
            <% if (typeof isOwner !== 'undefined' && isOwner) { %>
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-tools me-2"></i>Project Management
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">You own this project. You can edit or manage it below.</p>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/edit-project/<%= project.pid %>" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Edit Project
                            </a>
                            <a href="/dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-speedometer2"></i> Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Project Metadata -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-event me-2"></i>Project Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="project-meta">
                        <div class="info-row">
                            <i class="bi bi-play-circle info-icon"></i>
                            <div>
                                <strong>Start Date:</strong><br>
                                <span class="text-muted">
                                    <%= new Date(project.start_date).toLocaleDateString('en-US', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </span>
                            </div>
                        </div>
                        
                        <% if (project.end_date) { %>
                            <div class="info-row">
                                <i class="bi bi-stop-circle info-icon"></i>
                                <div>
                                    <strong>End Date:</strong><br>
                                    <span class="text-muted">
                                        <%= new Date(project.end_date).toLocaleDateString('en-US', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %>
                                    </span>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="info-row">
                                <i class="bi bi-stop-circle info-icon"></i>
                                <div>
                                    <strong>End Date:</strong><br>
                                    <span class="text-muted">Not specified</span>
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="info-row">
                            <i class="bi bi-gear info-icon"></i>
                            <div>
                                <strong>Current Phase:</strong><br>
                                <span class="text-muted">
                                    <%= project.phase ? project.phase.charAt(0).toUpperCase() + project.phase.slice(1) : 'Not specified' %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="info-row">
                            <i class="bi bi-person info-icon"></i>
                            <div>
                                <strong>Project Owner:</strong><br>
                                <span class="text-muted"><%= project.username %></span>
                            </div>
                        </div>
                        
                        <div class="info-row">
                            <i class="bi bi-envelope info-icon"></i>
                            <div>
                                <strong>Contact:</strong><br>
                                <span class="text-muted"><%= project.email %></span>
                            </div>
                        </div>
                        
                        <div class="info-row">
                            <i class="bi bi-hash info-icon"></i>
                            <div>
                                <strong>Project ID:</strong><br>
                                <span class="text-muted">#<%= project.pid %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-compass me-2"></i>Quick Navigation
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-house"></i> All Projects
                        </a>
                        <a href="/search" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-search"></i> Search Projects
                        </a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-speedometer2"></i> My Dashboard
                            </a>
                            <a href="/add-project" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-circle"></i> Add New Project
                            </a>
                        <% } else { %>
                            <a href="/register" class="btn btn-primary btn-sm">
                                <i class="bi bi-person-plus"></i> Join Community
                            </a>
                            <a href="/login" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>