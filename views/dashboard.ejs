<!-- Dashboard Header -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="bi bi-speedometer2"></i> Welcome back, <%= user.username %>!
                </h1>
                <p class="lead mb-0">
                    Manage your projects, track progress, and stay organized with your development portfolio.
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-person-workspace display-1"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container">
    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h5 class="card-title text-white mb-2">Ready to start something new?</h5>
                            <p class="card-text mb-0">Add a new project to your portfolio and share it with the community.</p>
                        </div>
                        <div class="col-lg-4 text-lg-end">
                            <a href="/add-project" class="btn btn-light btn-lg">
                                <i class="bi bi-plus-circle"></i> Add New Project
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-center h-100 stat-card" data-phase="all">
                <div class="card-body">
                    <i class="bi bi-journal-code display-4 text-primary mb-3"></i>
                    <h3 class="fw-bold"><%= stats.total %></h3>
                    <p class="text-muted">Total Projects</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100 stat-card" data-phase="development">
                <div class="card-body">
                    <i class="bi bi-gear display-4 text-warning mb-3"></i>
                    <h3 class="fw-bold"><%= stats.development %></h3>
                    <p class="text-muted">Development</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100 stat-card" data-phase="testing">
                <div class="card-body">
                    <i class="bi bi-bug display-4 text-danger mb-3"></i>
                    <h3 class="fw-bold"><%= stats.testing %></h3>
                    <p class="text-muted">Testing</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100 stat-card" data-phase="complete">
                <div class="card-body">
                    <i class="bi bi-check-circle display-4 text-success mb-3"></i>
                    <h3 class="fw-bold"><%= stats.complete %></h3>
                    <p class="text-muted">Complete</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Phase Cards (Second Row) -->
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card text-center h-100 stat-card" data-phase="design">
                <div class="card-body">
                    <i class="bi bi-palette display-4 text-info mb-3"></i>
                    <h3 class="fw-bold"><%= stats.design %></h3>
                    <p class="text-muted">Design Phase</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center h-100 stat-card" data-phase="deployment">
                <div class="card-body">
                    <i class="bi bi-cloud-upload display-4 text-secondary mb-3"></i>
                    <h3 class="fw-bold"><%= stats.deployment %></h3>
                    <p class="text-muted">Deployment</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Display -->
    <div class="row mb-3" id="filterDisplay" style="display: none;">
        <div class="col-12">
            <div class="alert alert-info d-flex justify-content-between align-items-center filter-banner">
                <span>
                    <i class="bi bi-funnel me-2"></i>
                    Showing projects in phase: <strong id="currentFilter">All</strong>
                </span>
                <button class="btn btn-sm btn-outline-secondary" id="clearFilter">
                    <i class="bi bi-x"></i> Show All
                </button>
            </div>
        </div>
    </div>

    <!-- Projects Section -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">
                    <i class="bi bi-folder2-open"></i> Your Projects
                </h2>
                <% if (projects.length > 0) { %>
                    <a href="/add-project" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle"></i> Add Another
                    </a>
                <% } %>
            </div>

            <% if (projects.length === 0) { %>
                <div class="text-center py-5">
                    <i class="bi bi-folder-plus display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No projects yet</h3>
                    <p class="text-muted">Start building your portfolio by adding your first project!</p>
                    <a href="/add-project" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Create Your First Project
                    </a>
                </div>
            <% } else { %>
                <div class="row projects-container" id="projectsContainer">
                    <% projects.forEach(project => { %>
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4 project-card" data-phase="<%= project.phase %>">
                            <div class="card h-100">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">
                                            <a href="/project/<%= project.pid %>" class="text-decoration-none">
                                                <%= project.title %>
                                            </a>
                                        </h5>
                                        <% if (project.phase) { %>
                                            <span class="phase-badge phase-<%= project.phase %>">
                                                <%= project.phase.charAt(0).toUpperCase() + project.phase.slice(1) %>
                                            </span>
                                        <% } %>
                                    </div>
                                    
                                    <p class="card-text text-muted mb-3">
                                        <%= project.short_description && project.short_description.length > 100 ? 
                                            project.short_description.substring(0, 100) + '...' : 
                                            project.short_description || 'No description available' %>
                                    </p>
                                    
                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> 
                                            Started: <%= new Date(project.start_date).toLocaleDateString() %>
                                        </small>
                                        <% if (project.end_date) { %>
                                            <br>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar-check"></i> 
                                                Ends: <%= new Date(project.end_date).toLocaleDateString() %>
                                            </small>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex gap-2">
                                        <a href="/project/<%= project.pid %>" class="btn btn-outline-primary btn-sm flex-fill">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="/edit-project/<%= project.pid %>" class="btn btn-warning btn-sm flex-fill">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- No Results Message (hidden by default) -->
                <div class="text-center py-5" id="noResultsMessage" style="display: none;">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No projects found in this phase</h3>
                    <p class="text-muted">Try clicking on a different phase or show all projects.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Recent Activity -->
    <% if (projects.length > 0) { %>
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="fw-bold mb-4">
                    <i class="bi bi-clock-history"></i> Quick Stats
                </h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Project Phases Breakdown</h6>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Design</span>
                                        <span class="badge bg-primary"><%= stats.design %></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Development</span>
                                        <span class="badge bg-warning"><%= stats.development %></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Testing</span>
                                        <span class="badge bg-info"><%= stats.testing %></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Deployment</span>
                                        <span class="badge bg-secondary"><%= stats.deployment %></span>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Complete</span>
                                        <span class="badge bg-success"><%= stats.complete %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">Quick Actions</h6>
                                <div class="d-grid gap-2">
                                    <a href="/add-project" class="btn btn-primary btn-sm">
                                        <i class="bi bi-plus-circle"></i> Add New Project
                                    </a>
                                    <a href="/search" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-search"></i> Browse Community Projects
                                    </a>
                                    <a href="/" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-house"></i> Go to Homepage
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>